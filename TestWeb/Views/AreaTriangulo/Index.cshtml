
@{
    ViewBag.Title = "Index";
}
<style>
    .divList {
        width: 100px;
        height: auto;
        word-wrap: break-word;
    }
</style>
<div class="container">
    <h2>Calcular Área triangulo</h2>

    <div class="row">
        <div class="col-md-12">
            <form id="frmArea">
                <div class="form-group">

                    <div class="col-md-3">
                        <label>Área</label>
                        <input type="text" id="txtArea" name="txtArea" class="form-control " >
                    </div>
                    <div class="col-md-3 ">
                        <label>Base</label>
                        <input type="text" id="txtBase" name="txtBase" class="form-control " >
                    </div>
                    <br />
                    <div class="col-md-3 ">
                        <button onclick="$('#frmArea').submit()" type="button" class="btn btn-success">Calcular</button>
                        <button onclick="limpiar()" type="button" class="btn btn-danger">Limpiar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br />
    <div class="row no-gutters" id="list">

    </div>

</div>

@section scripts {
    <script src="~/ViewScripts/Factorial/Index.js"></script>
}

