
@{
    ViewBag.Title = "Index";
}
<style>
    .divList {
     
        width: 100px;
        height: auto;
        word-wrap: break-word;
    }

</style>

<div class="container">
    <h2>Calcular número factorial</h2>

    <div class="row">
        <div class="col-md-12">
            <form id="frmFactorizacion">
                <div class="form-group">

                    <div class="col-md-6 ">
                        <label>Número a calcular: </label>
                        <input type="text" id="txtNumber" name="txtNumber" class="form-control " onkeyup="aceptarNumeros(this)">
                    </div>
                </div>

                <br />
                <div class="form-group">

                    <div class="col-md-6 ">
                        <button onclick="$('#frmFactorizacion').submit()" type="button" class="btn btn-success">Calcular</button>
                        <button onclick="limpiar()" type="button" class="btn btn-danger">Limpiar</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
    <br />
    <div class="row no-gutters" id="list">
      
    </div>
    @*<div class="row ">
        <div class="col-md-12" id="list">

        </div>

    </div>*@
</div>

@section scripts {
    <script src="~/ViewScripts/Factorial/Index.js"></script>
}
